{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/just-a-paw/language/main/locale.schema.json",
  "title": "Locale",
  "description": "An object of locale config",
  "type": "object",
  "properties": {
    "contributors": {
      "description": "Translators of this locale",
      "items": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "minLength": 1,
            "maxLength": 32
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 32
          },
          "discord": {
            "type": "string",
            "pattern": "^\\d+$"
          },
          "github": {
            "type": "string",
            "pattern": "^https:\\/\\/github\\.com\\/[\\w-]+$"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      },
      "type": "array"
    },
    "crowdin": {
      "description": "Whether this locale is managed by Crowdin",
      "default": true,
      "type": "boolean"
    }
  },
  "additionalProperties": false
}